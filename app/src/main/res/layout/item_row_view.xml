<?xml version="1.0" encoding="utf-8"?>
    <!--Check this link-->
    <!--https://stackoverflow.com/questions/53219343/how-to-add-an-imageview-outside-and-to-the-left-of-a-card-->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="30dp"
    app:cardElevation="6dp"
    app:cardBackgroundColor="@color/primary_text"
    app:cardUseCompatPadding="true"
    android:layout_marginStart="50dp"
    >
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
    android:id="@+id/speakerName"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textColor="@color/icons"
    android:padding="3dp"
    android:textSize="20sp"
        android:layout_marginStart="30dp"/>

    <TextView
    android:id="@+id/speakerTopic"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textColor="@color/icons"
    android:padding="3dp"
    android:textSize="15sp"
    android:layout_marginStart="30dp"/>

    <TextView
    android:id="@+id/speakerBrief"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="3dp"
    android:textSize="12sp"
    android:textColor="@color/icons"
    android:layout_marginStart="30dp"/>

    </LinearLayout>
</android.support.v7.widget.CardView>
    <ImageView
        android:id="@+id/speakerImage"
        android:src="@drawable/ic_launcher"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="18dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:elevation="12dp"
        android:contentDescription="@string/app_name"/>
    </FrameLayout>
</LinearLayout>